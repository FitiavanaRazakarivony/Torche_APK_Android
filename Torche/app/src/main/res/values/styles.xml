<resources>
    <!-- Style pour le LinearLayout -->
    <style name="CustomLinearLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style pour le bouton avec la police personnalisée, le fond arrondi et l'ombre -->
    <style name="CustomButtonStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button</item> <!-- Fond personnalisé -->
    </style>

    <!-- Style pour le TextView avec la police personnalisée -->
    <style name="CustomTextViewStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

